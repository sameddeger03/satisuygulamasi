{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "@interfaces/*": ["interfaces/*"], "@kutuphane/*": ["kutuphane/*"], "@src/*": ["src/*"] }
  },
  "include": ["src/**/*", "interfaces/**/*", "kutuphane/**/*"],
  "references": [
    { "path": "tsconfig.node.json" }
  ]
}